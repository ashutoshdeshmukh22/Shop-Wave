<!-- Page Preloder -->
<div id="preloder">
    <div class="loader"></div>
</div>

<header class="main-header">
    <!-- Offcanvas Menu Begin -->
    <div class="offcanvas-menu-overlay"></div>
    <div class="offcanvas-menu-wrapper">

        <div class="offcanvas__option">
            <div class="offcanvas__links">
                <% if (!isAuthenticated) { %>
                    <a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Login</a>
                    <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Signup</a>
                    <% } else { %>

                        <form action="/logout" method="post">
                            <button type="submit">Logout</button>
                        </form>
                        <% } %>
            </div>
        </div>
        <div class="offcanvas__nav__option">
            <a href="#" class="search-switch"><img src="img/icon/search.png" alt=""></a>
            <% if (isAuthenticated) { %>
                <a href="#"><img src="img/icon/heart.png" alt=""></a>
                <a href="/cart"><img src="img/icon/cart.png" alt=""> <span>0</span></a>
                <div class="price">
                    <%= user.cart.totalCartAmount %>
                </div>
                <% } %>
        </div>

        <div id="mobile-menu-wrap"></div>
        <div class="offcanvas__text">
            <p>Free shipping, 30-day return or refund guarantee.</p>
        </div>
    </div>
    <!-- Offcanvas Menu End -->

    <!-- Header Section Begin -->
    <header class="header">
        <div class="header__top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-7">
                        <div class="header__top__left">
                            <p>Free shipping, 30-day return or refund guarantee.</p>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-5">
                        <div class="header__top__right">
                            <div class="header__top__links">
                                <% if (!isAuthenticated) { %>
                                    <a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Login</a>
                                    <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Signup</a>
                                    <% } else { %>
                                        <table>
                                            <tr>
                                                <td><a href="#" style="padding-right: 10px;">
                                                        <%= user.username %>
                                                    </a></td>
                                                <td>
                                                    <form action="/logout" method="post">
                                                        <button class="btn btn-dark" type="submit">Logout</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        </table>
                                        <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-3">
                    <div class="header__logo">
                        <a href="/"><img src="img/logo.png" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <nav class="header__menu mobile-menu">
                        <ul>
                            <li class="<%= path === '/' ? 'active' : '' %>" href="/"><a href="/">Home</a></li>
                            <li><a class="<%= path === '/products' ? 'active' : '' %>" href="/products">Shop</a></li>
                            <% if (isAuthenticated) { %>
                                <li><a class="" href="/orders">My Orders</a></li>
                                <% } %>
                                    <li><a href="/blogs" class="<%= path === '/blog' ? 'active' : '' %>"
                                            href="/products">Blog</a>
                                    </li>
                                    <li><a href="/contact-us" class="<%= path === '/contact' ? 'active' : '' %>"
                                            href="/contact-us">Contacts</a>
                                    </li>
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-3 col-md-3">
                    <div class="header__nav__option">
                        <div class="shop__sidebar__search">
                            <form action="/searchProducts" method="GET">
                                <input type="text" name="search" placeholder="Search...">
                                <button type="submit"><span class="icon_search"></span></button>
                            </form>
                        </div>
                        <% if (isAuthenticated) { %>
                            <a href="#"><img src="img/icon/heart.png" alt=""></a>
                            <a href="/cart"><img src="img/icon/cart.png" alt=""> <span>0</span></a>
                            <div class="price">
                                <%= user.cart.totalCartAmount %>
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>
            <div class="canvas__open"><i class="fa fa-bars"></i></div>
        </div>
    </header>
    <!-- Header Section End -->
</header>